<%- include('../../yelpCamps/yelpCampPartials/head.ejs') %>
<body>

  <%- include('../../yelpCamps/yelpCampPartials/navbar.ejs') %>

  <div class="container">
    <header class="jumbotron" style="height: 90px; break-after: avoid; background-color:#F8F9FA; text-align: center; margin-bottom:5%">
        <h1 style="padding-top:2%;">
            Welcome to Campgrounds
        </h1>  
    </header>                              

  <div class="album  bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <%campgroundArray.forEach(campground=>{ %> 
        <div class="col">
          <div class="card shadow-sm">

            <img src="<%=campground.imgUrl %>" alt="Image" class="thumbnail">

            <div class="card-body">
              <p class="card-text">
                <%= campground.campgroundName %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/campgrounds/<%=campground._id %>" type="button" class="btn btn-md btn-outline-secondary">Lets view</a>                  
                </div>               
              </div>
            </div>
          </div>
        </div>
        <% }) %>            
      </div>
    </div>
  </div>




    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <%- include('../../yelpCamps/yelpCampPartials/footer.ejs') %>
  </body>
</html>