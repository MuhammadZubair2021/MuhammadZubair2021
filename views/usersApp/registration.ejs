<html>
    <%- include('../../usersAppPartials/header.ejs') %>
    <body>
        <%- include('../../usersAppPartials/nav.ejs') %>
        
        <div style="height: 80%; text-align: center;">

            <h1 style="    font-size: 2.4rem;font-family: sans-serif;margin-top: 3%;">
                Register YourSelf
            </h1>

            <form action="/register_user" method="POST" style="border: 2px solid black;padding: 2% 0;border-radius: 230px;">                 
